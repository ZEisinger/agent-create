{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "adminUsername": { "type": "string" },
      "adminPassword": { "type": "securestring" },
      "osDiskVhdUri": { "type": "string" },
      "patToken": { "type": "securestring" },
      "pool": { "type": "string" },
      "agentUrl": { "type": "string" },
      "agentFileName": { "type": "string" },
      "accountUrl": { "type": "string" }
    },
    "variables": {
      "vnetID": "[resourceId('Microsoft.Network/virtualNetworks','VerifyImageVNet')]",
      "subnetRef": "[concat(variables('vnetID'),'/subnets/VerifyImageSubnet')]",
      "setupModulesCommand": " Add-Type -AssemblyName System.IO.Compression.FileSystem; ",
      "setZipSourceCommand": "[concat(' $zipFile = (Get-Item -Path ''./'' -Verbose).FullName + ''/', variables('agentFileName'), '''; ",
      "setZipDestinationCommand": " $destination = 'd:/a'; ",
      "unZipCommand": " [System.IO.Compression.ZipFile]::ExtractToDirectory($zipFile, $destination); ",
      "setCdCommand": " cd d:/a; ",
      "configCommand": "[concat('./config --unattended --url ', variables('accountUrl'), ' --auth pat --token ', variables('patToken'), ' --pool ''', variables('pool'), ''' --runAsService --windowsLogonAccount ', variables('adminUsername'), ' --windowsLogonPassword ', variables('adminPassword'), ' ;')]"
    },
    "resources": [
      {
        "type": "Microsoft.Compute/images",
        "apiVersion": "2016-04-30-preview",
        "name": "VerifyImageOSDisk",
        "location": "[resourceGroup().location]",
        "properties": {
          "storageProfile": {
            "osDisk": {
              "osType": "Windows",
              "osState": "Generalized",
              "blobUri": "[parameters('osDiskVhdUri')]",
              "storageAccountType": "Standard_LRS"
            }
          }
        }
      },
      {
        "apiVersion": "2016-03-30",
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "VerifyImagePublicIPAddress",
        "location": "[resourceGroup().location]",
        "properties": {
          "publicIPAllocationMethod": "Dynamic",
          "dnsSettings": {
            "domainNameLabel": "verifyimageresourcegroupdns1"
          }
        }
      },
      {
        "apiVersion": "2016-03-30",
        "type": "Microsoft.Network/virtualNetworks",
        "name": "VerifyImageVNet",
        "location": "[resourceGroup().location]",
        "properties": {
          "addressSpace": { "addressPrefixes": [ "10.0.0.0/16" ] },
          "subnets": [
            {
              "name": "VerifyImageSubnet",
              "properties": { "addressPrefix": "10.0.0.0/24" }
            }
          ]
        }
      },
      {
        "apiVersion": "2016-03-30",
        "type": "Microsoft.Network/networkInterfaces",
        "name": "VerifyImageNic",
        "location": "[resourceGroup().location]",
        "dependsOn": [
          "[resourceId('Microsoft.Network/publicIPAddresses/', 'VerifyImagePublicIPAddress')]",
          "[resourceId('Microsoft.Network/virtualNetworks/', 'VerifyImageVNet')]"
        ],
        "properties": {
          "ipConfigurations": [
            {
              "name": "ipconfig1",
              "properties": {
                "privateIPAllocationMethod": "Dynamic",
                "publicIPAddress": { "id": "[resourceId('Microsoft.Network/publicIPAddresses','VerifyImagePublicIPAddress')]" },
                "subnet": { "id": "[variables('subnetRef')]" }
              }
            }
          ]
        }
      },
      {
        "apiVersion": "2016-04-30-preview",
        "type": "Microsoft.Compute/virtualMachines",
        "name": "VerifyImageVM",
        "location": "[resourceGroup().location]",
        "dependsOn": [
          "[resourceId('Microsoft.Network/networkInterfaces/', 'VerifyImageNic')]",
          "[resourceId('Microsoft.Compute/images', 'VerifyImageOSDisk')]"
  
        ],
        "properties": {
          "hardwareProfile": { "vmSize": "Standard_DS3_v2" },
          "osProfile": {
            "computerName": "VerifyImageVM",
            "adminUsername": "[parameters('adminUsername')]",
            "adminPassword": "[parameters('adminPassword')]"
          },
          "storageProfile": {
            "imageReference": {
              "id": "[resourceId('Microsoft.Compute/images', 'VerifyImageOSDisk')]"
            }
          },
          "networkProfile": {
            "networkInterfaces": [
              {
                "id": "[resourceId('Microsoft.Network/networkInterfaces','VerifyImageNic')]"
              }
            ]
          }
        },
        "resources": [
          {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "VerifyImageVM/WinRMCustomScriptExtension",
            "apiVersion": "2016-04-30-preview",
            "location": "[resourceGroup().location]",
            "dependsOn": [
              "[resourceId('Microsoft.Compute/virtualMachines/', 'VerifyImageVM')]"
            ],
            "properties": {
              "publisher": "Microsoft.Compute",
              "type": "CustomScriptExtension",
              "typeHandlerVersion": "1.4",
              "settings": {
                "fileUris": [
                  "[parameters('agentUrl')]"
                ],
                "commandToExecute": "[concat('Powershell -Command \"&{ ', variables('setupModulesCommand'), variables('setZipSourceCommand'), variables('setZipDestinationCommand'), variables('unZipCommand'), variables('setCdCommand'), variables('configCommand'), ' }\"'"
              }
            }
          }
        ]
      }
    ]
  }